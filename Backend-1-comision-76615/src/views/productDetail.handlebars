<div class="product-detail">
  <a href="/" class="back-link">← Volver a productos</a>
  
  {{#if product}}
    <div class="detail-container">
      <div class="product-info">
        <h1>{{product.title}}</h1>
        <p class="product-id"><strong>ID:</strong> {{product._id}}</p>
        <p class="product-description">{{product.description}}</p>
        
        <div class="product-details">
          <div class="detail-item">
            <strong>Código:</strong> {{product.code}}
          </div>
          <div class="detail-item">
            <strong>Precio:</strong> <span class="price">${{product.price}}</span>
          </div>
          <div class="detail-item">
            <strong>Stock:</strong> {{product.stock}}
          </div>
          <div class="detail-item">
            <strong>Categoría:</strong> {{product.category}}
          </div>
          <div class="detail-item">
            <strong>Estado:</strong> 
            <span class="status {{#if product.status}}status-active{{else}}status-inactive{{/if}}">
              {{#if product.status}}Activo{{else}}Inactivo{{/if}}
            </span>
          </div>
        </div>

        {{#if product.thumbnails.length}}
          <div class="thumbnails">
            <h3>Imágenes:</h3>
            <div class="thumbnails-grid">
              {{#each product.thumbnails}}
                <img src="{{this}}" alt="Imagen del producto" class="thumbnail">
              {{/each}}
            </div>
          </div>
        {{/if}}

        <div class="product-actions">
          <button onclick="addToCart('{{product._id}}')" class="btn btn-primary btn-large">
            Agregar al Carrito
          </button>
        </div>
      </div>
    </div>
  {{else}}
    <div class="error-message">
      <p>Producto no encontrado</p>
      <a href="/" class="btn btn-primary">Volver a productos</a>
    </div>
  {{/if}}
</div>

<script>
  async function addToCart(productId) {
    try {
      // Crear o obtener carrito
      const cartResponse = await fetch('/api/carts', {
        method: 'POST'
      });
      const cartData = await cartResponse.json();
      
      if (cartData.status === 'success') {
        const cartId = cartData.payload._id;
        
        // Agregar producto al carrito
        const addResponse = await fetch(`/api/carts/${cartId}/product/${productId}`, {
          method: 'POST'
        });
        const addData = await addResponse.json();
        
        if (addData.status === 'success') {
          alert('Producto agregado al carrito exitosamente');
          // Opcional: redirigir al carrito
          const goToCart = confirm('¿Deseas ver tu carrito?');
          if (goToCart) {
            window.location.href = `/carts/${cartId}`;
          }
        } else {
          alert('Error al agregar producto al carrito');
        }
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error al agregar producto al carrito');
    }
  }
</script>

