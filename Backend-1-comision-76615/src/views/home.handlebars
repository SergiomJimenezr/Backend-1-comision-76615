<h2>Lista de Productos</h2>

<!-- Filtros y ordenamiento -->
<div class="filters-container">
  <form method="GET" action="/" class="filters-form">
    <div class="filter-group">
      <label for="query">Filtrar por categoría o disponibilidad:</label>
      <input type="text" id="query" name="query" placeholder="Ej: electronics, true, false" value="{{query}}">
    </div>
    <div class="filter-group">
      <label for="sort">Ordenar por precio:</label>
      <select id="sort" name="sort">
        <option value="">Sin ordenar</option>
        <option value="asc" {{#if (eq sort "asc")}}selected{{/if}}>Ascendente</option>
        <option value="desc" {{#if (eq sort "desc")}}selected{{/if}}>Descendente</option>
      </select>
    </div>
    <div class="filter-group">
      <label for="limit">Productos por página:</label>
      <select id="limit" name="limit">
        <option value="10" {{#if (eq pagination.limit 10)}}selected{{/if}}>10</option>
        <option value="20" {{#if (eq pagination.limit 20)}}selected{{/if}}>20</option>
        <option value="50" {{#if (eq pagination.limit 50)}}selected{{/if}}>50</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Aplicar filtros</button>
  </form>
</div>

{{#if products.length}}
  <div class="products-grid">
    {{#each products}}
      <div class="product-card">
        <h3>{{title}}</h3>
        <p><strong>ID:</strong> {{_id}}</p>
        <p><strong>Descripción:</strong> {{description}}</p>
        <p><strong>Código:</strong> {{code}}</p>
        <p class="price"><strong>Precio:</strong> ${{price}}</p>
        <p><strong>Stock:</strong> {{stock}}</p>
        <p><strong>Categoría:</strong> {{category}}</p>
        <p><strong>Estado:</strong> {{#if status}}Activo{{else}}Inactivo{{/if}}</p>
        {{#if thumbnails.length}}
          <p><strong>Imágenes:</strong> {{thumbnails.length}}</p>
        {{/if}}
        <div class="product-actions">
          <a href="/products/{{_id}}" class="btn btn-primary">Ver Detalle</a>
          <button onclick="addToCart('{{_id}}')" class="btn btn-primary">Agregar al Carrito</button>
        </div>
      </div>
    {{/each}}
  </div>

  <!-- Paginación -->
  {{#if pagination}}
    <div class="pagination">
      {{#if pagination.hasPrevPage}}
        <a href="{{pagination.prevLink}}" class="btn btn-primary">Anterior</a>
      {{else}}
        <span class="btn btn-disabled">Anterior</span>
      {{/if}}
      
      <span class="page-info">
        Página {{pagination.page}} de {{pagination.totalPages}}
      </span>
      
      {{#if pagination.hasNextPage}}
        <a href="{{pagination.nextLink}}" class="btn btn-primary">Siguiente</a>
      {{else}}
        <span class="btn btn-disabled">Siguiente</span>
      {{/if}}
    </div>
  {{/if}}
{{else}}
  <div class="no-products">
    <p>No hay productos disponibles</p>
  </div>
{{/if}}

<script>
  async function addToCart(productId) {
    // Primero necesitamos obtener o crear un carrito
    // Por simplicidad, crearemos un nuevo carrito cada vez
    // En una app real, esto debería usar el carrito del usuario
    try {
      // Crear o obtener carrito (aquí asumimos que hay un carrito activo)
      // Por ahora, crearemos uno nuevo cada vez
      const cartResponse = await fetch('/api/carts', {
        method: 'POST'
      });
      const cartData = await cartResponse.json();
      
      if (cartData.status === 'success') {
        const cartId = cartData.payload._id;
        
        // Agregar producto al carrito
        const addResponse = await fetch(`/api/carts/${cartId}/product/${productId}`, {
          method: 'POST'
        });
        const addData = await addResponse.json();
        
        if (addData.status === 'success') {
          alert('Producto agregado al carrito exitosamente');
          // Opcional: redirigir al carrito
          // window.location.href = `/carts/${cartId}`;
        } else {
          alert('Error al agregar producto al carrito');
        }
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error al agregar producto al carrito');
    }
  }
</script>

