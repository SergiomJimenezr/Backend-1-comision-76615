<div class="cart-container">
  <h2>Carrito de Compras</h2>
  <a href="/" class="back-link">← Volver a productos</a>

  {{#if cart.products.length}}
    <div class="cart-items">
      {{#each cart.products}}
        <div class="cart-item">
          {{#if this.product}}
            <div class="item-info">
              <h3>{{this.product.title}}</h3>
              <p><strong>ID:</strong> {{this.product._id}}</p>
              <p><strong>Descripción:</strong> {{this.product.description}}</p>
              <p><strong>Código:</strong> {{this.product.code}}</p>
              <p class="price"><strong>Precio unitario:</strong> ${{this.product.price}}</p>
              <p><strong>Cantidad:</strong> {{this.quantity}}</p>
              <p class="total-price"><strong>Total:</strong> ${{multiply this.product.price this.quantity}}</p>
              <p><strong>Categoría:</strong> {{this.product.category}}</p>
            </div>
            <div class="item-actions">
              <button onclick="updateQuantity('{{../cart.id}}', '{{this.product._id}}', {{this.quantity}})" class="btn btn-primary">
                Actualizar Cantidad
              </button>
              <button onclick="removeProduct('{{../cart.id}}', '{{this.product._id}}')" class="btn btn-danger">
                Eliminar
              </button>
            </div>
          {{else}}
            <p>Producto no disponible</p>
          {{/if}}
        </div>
      {{/each}}
    </div>

    <div class="cart-summary">
      <h3>Resumen del Carrito</h3>
      <p><strong>Total de productos:</strong> {{cart.products.length}}</p>
      <p class="grand-total"><strong>Total a pagar:</strong> ${{calculateTotal cart.products}}</p>
    </div>

    <div class="cart-actions">
      <button onclick="clearCart('{{cart.id}}')" class="btn btn-danger">Vaciar Carrito</button>
    </div>
  {{else}}
    <div class="empty-cart">
      <p>El carrito está vacío</p>
      <a href="/" class="btn btn-primary">Ver Productos</a>
    </div>
  {{/if}}
</div>

<script>
  // Helper para multiplicar
  Handlebars.registerHelper('multiply', function(a, b) {
    return (a * b).toFixed(2);
  });

  // Helper para calcular total
  Handlebars.registerHelper('calculateTotal', function(products) {
    let total = 0;
    products.forEach(item => {
      if (item.product && item.product.price) {
        total += item.product.price * item.quantity;
      }
    });
    return total.toFixed(2);
  });

  async function updateQuantity(cartId, productId, currentQuantity) {
    const newQuantity = prompt('Ingrese la nueva cantidad:', currentQuantity);
    if (newQuantity === null || newQuantity === '' || isNaN(newQuantity) || parseInt(newQuantity) < 1) {
      return;
    }

    try {
      const response = await fetch(`/api/carts/${cartId}/products/${productId}`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ quantity: parseInt(newQuantity) })
      });

      const data = await response.json();
      if (data.status === 'success') {
        alert('Cantidad actualizada exitosamente');
        location.reload();
      } else {
        alert('Error al actualizar la cantidad');
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error al actualizar la cantidad');
    }
  }

  async function removeProduct(cartId, productId) {
    if (!confirm('¿Está seguro de que desea eliminar este producto del carrito?')) {
      return;
    }

    try {
      const response = await fetch(`/api/carts/${cartId}/products/${productId}`, {
        method: 'DELETE'
      });

      const data = await response.json();
      if (data.status === 'success') {
        alert('Producto eliminado del carrito');
        location.reload();
      } else {
        alert('Error al eliminar el producto');
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error al eliminar el producto');
    }
  }

  async function clearCart(cartId) {
    if (!confirm('¿Está seguro de que desea vaciar el carrito?')) {
      return;
    }

    try {
      const response = await fetch(`/api/carts/${cartId}`, {
        method: 'DELETE'
      });

      const data = await response.json();
      if (data.status === 'success') {
        alert('Carrito vaciado exitosamente');
        location.reload();
      } else {
        alert('Error al vaciar el carrito');
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error al vaciar el carrito');
    }
  }
</script>

